<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.midtermproject.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/aboutproject"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/about">

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="74dp"
            android:layout_marginTop="104dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="54dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_pass"
            android:ems="10"
            android:hint="  Password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            app:layout_constraintBottom_toTopOf="@+id/login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginLeft="74dp"
            android:layout_marginRight="76dp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="74dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="76dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_username"
            android:ems="10"
            android:hint="  Username"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginLeft="74dp"
            android:layout_marginRight="76dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="299dp"
            android:layout_height="178dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="56dp"
            android:src="@drawable/tanawlogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/login"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="81dp"

            android:layout_marginRight="81dp"
            android:text="Login"
            android:textColor="#070707"
            app:backgroundTint="@color/signupc1"
            app:iconPadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password" />

        <Button
            android:id="@+id/forgotpassword"
            android:layout_width="255dp"
            android:layout_height="32dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="36dp"
            android:background="#00FFFFFF"
            android:hint="Forgot your password?"
            android:textSize="10sp"
            app:iconPadding="8dp"
            app:layout_constraintBottom_toTopOf="@+id/spectre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login"
            android:layout_marginRight="76dp"
            android:layout_marginLeft="80dp" />

        <ImageView
            android:id="@+id/spectre"
            android:layout_width="121dp"
            android:layout_height="75dp"
            android:layout_marginStart="145dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="145dp"
            android:src="@drawable/spectrelogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forgotpassword" />

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="40dp"
            android:text="Dont have account?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/signup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spectre"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="10dp" />

        <Button
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="92dp"
            android:layout_marginBottom="25dp"
            android:background="#00FFFFFF"
            android:hint="Sign up"
            android:textColor="#0B8BF1"
            android:textSize="16sp"
            android:textStyle="bold"
            app:iconPadding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/account"
            app:layout_constraintTop_toBottomOf="@+id/spectre"
            android:layout_marginRight="92dp"
            android:layout_marginLeft="10dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>